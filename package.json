{
	"name": "toastit",
	"version": "2.1.4",
	"type": "module",
	"main": "./dist/toastit.min.js",
	"exports": {
		".": {
			"import": "./index.js",
			"types": "./lib/index.d.ts"
		},
		"./esm": {
			"import": "./lib/index.js",
			"types": "./lib/index.d.ts"
		}
	},
	"scripts": {
		"dev": "wireit",
		"build": "wireit",
		"build:ts": "wireit",
		"build:move-declarations": "wireit"
	},
	"wireit": {
		"dev": {
			"service": true,
			"command": "vite"
		},
		"build": {
			"dependencies": [
				"build:ts",
				"build:rollup"
			]
		},
		"build:ts": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"./src/",
				"./tsconfig.json"
			],
			"output": [
				"./lib/"
			]
		},
		"build:rollup": {
			"command": "rollup -c",
			"dependencies": [
				"build:ts"
			],
			"files": [
				"./rollup.config.js"
			],
			"output": [
				"./dist/toastit.min.js"
			]
		},
		"build:esbuild": {
			"#": "DEPRECATED",
			"command": "node esbuild.config.js",
			"dependencies": [
				"build:ts"
			],
			"files": [
				"./esbuild.config.js"
			],
			"output": [
				"./index.js"
			]
		}
	},
	"files": [
		"./lib",
		"./dist",
		"./index.js.LEGAL.txt"
	],
	"dependencies": {
		"@material/mwc-snackbar": "^0.27.0"
	},
	"devDependencies": {
		"@material/snackbar": "^14.0.0",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@rollup/plugin-terser": "^0.4.4",
		"rollup": "^4.41.1",
		"rollup-plugin-minify-template-literals": "^1.1.7",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"wireit": "^0.14.12"
	}
}
