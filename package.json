{
	"name": "toastit",
	"version": "1.1.7",
	"type": "module",
	"exports": {
		".": {
			"default": "./index.js",
			"types": "./lib/index.d.ts"
		}
	},
	"scripts": {
		"dev": "wireit",
		"build": "wireit",
		"build:ts": "wireit",
		"build:move-declarations": "wireit"
	},
	"wireit": {
		"dev": {
			"service": true,
			"command": "vite"
		},
		"build": {
			"dependencies": [
				"build:ts",
				"build:esbuild"
			]
		},
		"build:ts": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"src",
				"tsconfig.json"
			],
			"output": [
				"./lib/index.d.ts",
				"./lib/index.js"
			]
		},
		"build:esbuild": {
			"command": "node esbuild.config.js",
			"dependencies": [
				"build:ts"
			],
			"files": [
				"./lib/index.js",
				"./esbuild.config.js"
			],
			"output": [
				"index.js"
			]
		}
	},
	"files": [
		"./index.js",
		"./lib",
		"./index.js.LEGAL.txt"
	],
	"devDependencies": {
		"@material/mwc-snackbar": "^0.27.0",
		"@material/snackbar": "^14.0.0",
		"esbuild": "^0.24.2",
		"lit": "^3.2.1",
		"shx": "^0.3.4",
		"typescript": "^5.7.3",
		"vite": "^6.0.11",
		"wireit": "^0.14.9"
	}
}
